{% extends 'base.html.twig' %}

{% block title %} Decouvrez notre liste de jeux !{% endblock %}

{% block body %}      
     <!-- Page Content -->
    <div class="container" style="margin-top: 80px;">

      <div class="row">

        <div class="col-lg-3 mt-4">

          <div class="list-group">
            <a href="#" class="list-group-item">Toutes catégories</a>
            <a href="#" class="list-group-item">Consoles</a>
            <a href="#" class="list-group-item">Jeux</a>
          </div>

        </div>

        <div class="col-lg-9">
          <!-- CAROUSSEL PRODUITS -->
    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">

      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>

      <div class="carousel-inner" role="listbox">

        <div class="carousel-item active">
          <img class="d-block img-fluid" src="{{ asset('images/actu1.gif') }}" alt="First slide">
        </div>

        <div class="carousel-item">
          <img class="d-block img-fluid" src="{{ asset('images/actu2.gif') }}" alt="Second slide">
        </div>

        <div class="carousel-item">
          <img class="d-block img-fluid" src="{{ asset('images/actu3.gif') }}" alt="Third slide">
        </div>

      </div>

      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>

    </div>

<div class="row mb-5">
    {% if error is defined %}
    {{error}}
    {% endif %}
    {% for game in allgames %}
    <div class="col-lg-4 col-md-6 mb-5">

      <div class="card">
        <a href="#"><img class="card-img-top" src="{{ asset('images/' ~ game.image) }}" alt=" {{game.productname}} " height="400px" width="700px"></a>

        <div class="card-body">
          <h4 class="card-title">
            <a href="#">{{game.productname}} {{ game.idConsole }}</a>
          </h4>
          <h5>{{ game.price}}€</h5>
        </div>

        <span class="plus"><a href="{{ path('cart_add', {'id': game.id}) }}"><img src="{{ asset('images/logoplus.png') }}"></a></span>
        <div class="card-footer">
          <a href="#"><i class="fas fa-gift mr-5"></i></a>
          <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
        </div>

      </div>

    </div>

    {% endfor %}
    <!-- END PRODUIT CARD -->
    <!-- UN SEUL SUFFIT POUR ENSUITE ELABORER UN FOR EACH AVEC LES DONNEES DE LA BDD -->
</div>
  <!-- block body -->
{% endblock %}
